{
  "navigationFallback": {
    "rewrite": "/index.html"
  },
  "routes": [
    {
      "route": "/books/*.pdf",
      "headers": {
        "Cache-Control": "no-cache",
        "Accept-Ranges": "bytes"
      }
    },
    {
      "route": "/books/*.mp3",
      "headers": {
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "route": "/books/*.json",
      "headers": {
        "Cache-Control": "public, max-age=300"
      }
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "mimeTypes": {
    ".json": "application/json",
    ".mp3": "audio/mpeg",
    ".pdf": "application/pdf"
  },
  "globalHeaders": {
    "Content-Security-Policy": "frame-ancestors 'none'",
    "X-Content-Type-Options": "nosniff",
    "Referrer-Policy": "strict-origin-when-cross-origin"
  },
  "responseOverrides": {
    "400": {
      "rewrite": "/index.html"
    },
    "404": {
      "rewrite": "/index.html"
    }
  }
}